{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,  
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",        
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "dist",
    "repo_compare_result/*",
    "dist*",
    "node_modules",
    "subfolder/dist",
    "subfolder/node_modules",
    "**/dist/*",
    "**/node_modules/*",
    "coverage/**/*",
    "**/__mocks__/*"
  ],
}